{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "required": [
    "letterType",
    "name"
  ],
  "properties": {
    "name": {
      "description": "Display name for the letter",
      "type": "string"
    },
    "letterType": {
      "description": "Letter type used to pass as an argument to the letter download endpoint",
      "enum": [
        "commissary",
        "proof_of_service",
        "medicare_partd",
        "minimum_essential_coverage",
        "service_verification",
        "civil_service",
        "benefit_summary",
        "benefit_verification",
        "certificate_of_eligibility"
      ]
    }
  },
  "type": "object"
}
