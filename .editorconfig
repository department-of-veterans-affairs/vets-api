# Minimal Editorconfig for multiple edotor support across platforms
root = true

[*]
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf

[*.gemspec]
# indent_size = 2

[*.rb]
# indent_size = 2

[*.yml]
# indent_size = 2

[*.md]

[{*[Mm]akefile*,*.mak,*.mk,depend}]
indent_style = tab
