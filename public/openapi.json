                    "attributes": {
                      "submitted_at": "2026-01-13T15:44:02.028Z",
                      "regional_office": [],
                      "confirmation_number": "12345678-1234-1234-1234-123456789abc",
                      "guid": "12345678-1234-1234-1234-123456789abc",
                      "form": "21-4192"
                    }
                  }
                },
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        },
