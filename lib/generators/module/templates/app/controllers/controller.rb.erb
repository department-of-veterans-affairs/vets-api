# frozen_string_literal: true

module <%= class_name %>
  module V0
    class <%= class_name %>Controller < ApplicationController
      skip_before_action :authenticate

      def index
        message = service.get_message
        render json: <%= class_name %>::<%= class_name %>Serializer.new(message).serialized_json
      end

      private

      def service
        <%= class_name %>::Service.new
      end
    end
  end
end
