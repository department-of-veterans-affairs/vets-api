{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["data"],
  "properties": {
    "data": {
      "type": ["object", "null"],
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "attributes": {
          "type": "object",
          "required": ["res_case_id", "is_transferred_to_cwnrs", "orientation_appointment_details", "external_status"],
          "properties": {
            "res_case_id": { "type": ["integer", "null"] },
            "is_transferred_to_cwnrs": { "type": ["boolean", "null"] },
            "orientation_appointment_details": {
              "type": ["object", "null"],
              "properties": {
                "appointment_date_time": { "type": ["string", "null"] },
                "appointment_place": { "type": ["string", "null"] }
              }
            },
            "external_status": {
              "type": ["object", "null"],
              "properties": {
                "is_discontinued": { "type": ["boolean", "null"] },
                "discontinued_reason": { "type": ["string", "null"] },
                "is_interrupted": { "type": ["boolean", "null"] },
                "interrupted_reason": { "type": ["string", "null"] },
                "state_list": {
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "step_code": { "type": ["string", "null"] },
                      "status": { "type": ["string", "null"] }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
