{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["data"],
  "properties": {
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "attributes"],
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "required": ["code"],
          "properties": {
            "code": {
              "type": "string",
              "description": "code for Power of attorney"
            },
            "phoneNumber": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
