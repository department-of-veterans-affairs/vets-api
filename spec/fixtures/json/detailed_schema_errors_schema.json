{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema for testing SchemaError handling",
  "$ref": "#/definitions/data",
  "definitions": {
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "$ref": "#/definitions/name" },
        "age": { "$ref": "#/definitions/age" },
        "married": { "$ref": "#/definitions/married" },
        "pattern": { "$ref": "#/definitions/pattern" },
        "email": { "$ref": "#/definitions/email" },
        "gender": { "$ref": "#/definitions/gender" },
        "favoriteFood": { "$ref": "#/definitions/favoriteFood" },
        "hungry?": { "$ref": "#/definitions/hungry?" },
        "dessert": { "$ref": "#/definitions/dessert" },
        "location": { "$ref": "#/definitions/location" },
        "favoriteFruits": { "$ref":  "#/definitions/favoriteFruits" },
        "requiredField": { "$ref": "#/definitions/requiredField" }
      },
      "required": ["name", "age", "married", "pattern", "email", "gender", "favoriteFood", "hungry?", "location", "requiredField"],
      "if": { "properties": { "hungry?": { "const":  true } } },
      "then": { "required":  ["dessert"] }
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20
    },
    "age": {
      "type": "integer",
      "minimum": 21,
      "maximum": 130
    },
    "married": {
      "type": "boolean"
    },
    "pattern": {
      "type": "string",
      "pattern": ".@.",
      "minLength": 3
    },
    "email": {
      "format": "email"
    },
    "gender": {
      "type": "string",
      "enum": [
        "male",
        "female",
        "undisclosed"
      ]
    },
    "favoriteFood": {
      "type": "string",
      "const": "pizza"
    },
    "hungry?": {
      "type": "boolean"
    },
    "dessert": {
      "type": "string",
      "enum": [
        "cheesecake",
        "snickerdoodles",
        "cream puff"
      ]
    },
    "location": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        }
      },
      "required": [
        "latitude",
        "longitude"
      ]
    },
    "favoriteFruits": {
      "type": "array",
      "items": { "$ref": "#/definitions/fruit" },
      "minItems": 3,
      "maxItems": 5,
      "uniqueItems": true
    },
    "fruit": {
      "type": "string"
    },
    "requiredField": {
      "type": "string"
    }
  }
}
