{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "type" : "object",
  "required": ["data"],
  "properties": {
    "data": {
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": { "type": "string"},
        "type": { "enum": ["va_form"] },
        "attributes": {
          "type": "object",
          "required": [
            "form_name",
            "url",
            "title",
            "first_issued_on",
            "last_revision_on",
            "pages",
            "sha256"
          ],
          "properties": {
            "form_name": { "type": "string" },
            "url": { "type": "string" },
            "title": { "type": "string" },
            "first_issued_on": { "type": ["string", "null"] },
            "last_revision_on": { "type": ["string", "null"] },
            "pages": { "type": "integer" },
            "sha256": { "type": "string" },
            "versions": { 
              "type": "array",
              "items": {
                "sha256": { "type": "string" },
                "revision_on": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}

