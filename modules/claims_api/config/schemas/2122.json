{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Form 2122 Schema",
  "type": "object",
  "required": [
    "poaCode"
  ],
  "properties": {
    "poaCode": {
      "type": "string"
    },
    "poaFirstName": {
      "type": "string"
    },
    "poaLastName": {
      "type": "string"
    },
    "veteranSignatureImage": {
        "title": "Signature of the Veteran",
        "type": "string",
        "media": {
          "binaryEncoding": "base64",
          "type": "image/png"
        }
    },
    "representativeSignatureImage": {
        "title": "Signature of the representative",
        "type": "string",
        "media": {
          "binaryEncoding": "base64",
          "type": "image/png"
        }
    }
  }
}
