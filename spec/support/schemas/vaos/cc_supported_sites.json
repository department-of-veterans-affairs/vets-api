  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "attributes": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "timezone": { "type": "string" }
            },
            "required": [
