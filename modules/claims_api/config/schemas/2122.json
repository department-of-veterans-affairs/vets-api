{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Form 2122 Schema",
  "type": "object",
  "required": [
    "serviceOrganization"
  ],
  "definitions": {
    "addressLine": {
      "type": "string",
      "pattern": "^([-a-zA-Z0-9'.,&#]([-a-zA-Z0-9'.,&# ])?)+$",
      "maxLength": 20
    },
    "date": {
      "type": "string",
      "pattern": "^(\\d{4}|XXXX)-(0[1-9]|1[0-2]|XX)-(0[1-9]|[1-2][0-9]|3[0-1]|XX)$"
    },
    "email": {
      "type": "string",
      "pattern": ".@.",
      "maxLength": 61,
      "$comment": "TODO: use draft 7 feature [format: idn-email] or [format: email] over pattern (when there is broader support)"
    },
    "signatureImage": {
        "title": "Signature of the Veteran or their Representative",
        "type": "string"
    },
    "phone": {
      "$comment": "the phone fields must not exceed 20 chars, when concatenated",
      "type": "object",
      "required": [
        "areaCode",
        "phoneNumber"
      ],
      "properties": {
        "countryCode":     { "type": "string", "pattern": "^[0-9]+$" },
        "areaCode":        { "type": "string", "pattern": "^[2-9][0-9]{2}$" },
        "phoneNumber":     { "type": "string", "pattern": "^[0-9]{1,14}$" },
        "phoneNumberExt":  { "type": "string", "pattern": "^[a-zA-Z0-9]{1,10}$" }
      }
    },
    "mailingAddress": {
      "type": "object",
      "required": [
      ],
      "numberAndStreet": {
        "$ref": "#/definitions/addressLine"
      },
      "aptUnitNumber": {
        "$ref": "integer"
      },
      "city": {
        "type": "string"
      },
      "country": {
        "type": "string"
      },
      "zipFirstFive": {
        "type": "string",
        "pattern": "^\\d{5}?$"
      },
      "zipLastFour": {
        "type": "string",
        "pattern": "^\\d{4}?$"
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "veteran": {
      "type": "object",
      "required": [
        "address",
        "phone",
        "email"
      ],
      "properties": {
        "address": { "$ref": "#/definitions/mailingAddress" },
        "phone":   { "$ref": "#/definitions/phone" },
        "email":   { "$ref": "#/definitions/email" }
      }
    },
    "claimant": {
      "type": "object",
      "required": [
        "firstName",
        "middleInitial",
        "lastName",
        "address",
        "phone",
        "email",
        "relationship"
      ],
      "properties": {
        "firstName":     { "type": "string" },
        "middleInitial": { "type": "string" },
        "lastName":      { "type": "string" },
        "address":       { "$ref": "#/definitions/mailingAddress" },
        "phone":         { "$ref": "#/definitions/phone" },
        "email":         { "$ref": "#/definitions/email" },
        "relationship":  { "type": "string" }
      }
    },
    "serviceOrganization": {
      "type": "object",
      "required": [
        "poaCode"
      ],
      "properties": {
        "poaCode":          { "type": "string" },
        "organizationName": { "type": "string" },
        "firstName":        { "type": "string" },
        "lastName":         { "type": "string" },
        "jobTitle":         { "type": "string" },
        "address":         { "$ref": "#/definitions/mailingAddress" },
        "email":            { "$ref": "#/definitions/email" },
        "appointmentDate":  { "$ref": "#/definitions/date" }
      }
    },
    "signatures": {
      "type": "object",
      "required": [
        "veteran",
        "representative"
      ],
      "properties": {
        "veteran": { "$ref": "#/definitions/signatureImage" },
        "representative": { "$ref": "#/definitions/signatureImage" }
      }
    },
    "recordConsent": { "type": "boolean" },
    "consentLimits": {
      "type": "array",
      "items": [
        {
          "type": "string",
          "enum": [
            "DRUG ABUSE",
            "ALCOHOLISM",
            "HIV",
            "SICKLE CELL"
          ]
        }
      ]
    },
    "consentAddressChange": { "type": "boolean" }
  }
}
