{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "required": [
    "id",
    "name",
    "city",
    "state",
    "cerner"
  ],
  "properties": {
    "id": {
      "description": "Facility id",
      "type": "string"
    },
    "name": {
      "description": "Facility name",
      "type": "string"
    },
    "city": {
      "description": "Facility city",
      "type": "string"
    },
    "state": {
      "description": "Facility state",
      "type": "string"
    },
    "cerner": {
      "description": "Is facility cerner?",
      "type": "boolean"
    },
    "miles": {
      "description": "distance in miles from current location or home",
      "type": "string"
    },
    "clinics": {
      "description": "array of clinics to be used for direct scheduling",
      "type": "array"
    }
  },
  "type": "object"
}
