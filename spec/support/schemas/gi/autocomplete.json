{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "version": { "type": "integer" }
      },
      "required": [
        "version"
      ]
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "integer" },
          "value": { "type": "string" },
          "label": { "type": "string" }
        },
        "required": [
          "id",
          "value",
          "label"
        ]
      }
    },
    "links": {
      "type": "object",
      "properties": {
        "self": { "type": "string" }
      },
      "required": [
        "self"
      ]
    }
  },
  "required": [
    "meta",
    "data",
    "links"
  ]
}
