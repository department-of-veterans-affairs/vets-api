{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "startDate",
    "clinicId",
    "facilityId",
    "patientIcn"
  ],
  "properties": {
    "startDate": {
      "type": "string"
    },
    "clinicId": {
      "type": "string"
    },
    "facilityId": {
      "type": "string"
    },
    "patientIcn": {
      "type": "string"
    },
    "vdsAppointments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "appointmentLength",
          "appointmentTime",
          "clinic",
          "patientId",
          "type",
          "currentStatus"
        ],
        "properties": {
          "appointmentLength": {
            "type": "string"
          },
          "appointmentTime": {
            "type": "string"
          },
          "clinic": {
            "type": "object",
            "required": [
              "name",
              "askForCheckIn",
              "facilityCode"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "askForCheckIn": {
                "type": "boolean"
              },
              "facilityCode": {
                "type": "string"
              }
            }
          },
          "patientId": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "currentStatus": {
            "type": "string"
          }
        }
      }
    }
  }
}
