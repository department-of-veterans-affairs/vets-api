{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["data"],
  "properties": {
    "data": {
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string"},
        "attributes": {
          "type": "object",
          "required": [ "first_name", "last_name" ],
          "properties": {
            "first_name": { "type": "string" },
            "last_name": { "type": "string" },
            "name_suffix": { "type": "string" },
            "date_of_birth": { "type": "string" },
            "va_file_number": { "type": "string" },
            "regional_processing_office": { "type": "string" },
            "eligibility_date": { "type": "string" },
            "delimiting_date": { "type": "string" },
            "percentage_benefit": { "type": "integer" },
            "original_entitlement": { "type": "integer" },
            "used_entitlement": { "type": "integer" },
            "remaining_entitlement": { "type": "integer" },
            "enrollments": {
              "type": "array",
              "items": {
                "$ref": "enrollment.json"
              }
            }
          }
        }
      }
    }
  }
}
