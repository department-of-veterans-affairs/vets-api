{
	"info": {
		"_postman_id": "6b8a4eb0-5a6a-4bb3-a714-f454a4b4743f",
		"name": "Webhook Debug 1",
		"description": "This collection will be executed sequently once hit by the incoming webhook.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Debug Webhook Payload",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let jsonData = pm.response.json()",
							"",
							"console.log(\"DATA SENT to DESTINATION\")",
							"console.log(\"Response is:\")",
							"console.log(jsonData)",
							"",
							"pm.test(\"Payload is \\\"This is kevins test\\\"\", function () {",
							"    pm.expect(jsonData.data.message).to.eql(\"This is kevins test1\");",
							"});",
							"",
							"console.log(\"End of response\")"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var previousRequest = JSON.parse(globals.previousRequest),",
							"    webhookRequestData = previousRequest.data;",
							"",
							"console.log(webhookRequestData)",
							"",
							"// extract things from webhook and save them in variables",
							"pm.variables.set('awesome_key_example', Object.keys(webhookRequestData)[0])",
							"pm.variables.set('awesome_value_example', webhookRequestData[Object.keys(webhookRequestData)[0]])"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"example\": \"HERE SHOULD GO THE THINGS YOU WANT TO SEND TO DESTINATION URL\",\n    \"{{awesome_key_example}}\":\"{{awesome_value_example}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://postman-echo.com/post",
					"protocol": "https",
					"host": [
						"postman-echo",
						"com"
					],
					"path": [
						"post"
					]
				},
				"description": "Sample request to execute when webhook hits.\n\nYou can change the request URL to the URL of your choice, for example a webhook URL for Slack.\n\nDefault `pre-request script` only displays in the console the incoming payload, and save data in variables.\n\nYou can edit both scripts to your convenience."
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	]
}