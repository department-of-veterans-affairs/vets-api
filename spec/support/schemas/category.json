{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["data"],
  "properties": {
    "data": {
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": { "type": "string" },
        "type": { "enum": ["categories"] },
        "attributes": {
          "type": "object",
          "required": ["message_category_type"],
          "properties": {
            "message_category_type":  {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1,
              "uniqueItems": true
            }
          }
        }
      }
    }
  }
}
