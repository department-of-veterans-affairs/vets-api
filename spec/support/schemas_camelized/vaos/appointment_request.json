          "type": [
            "string",
            null
          ]
        },
        "optionDate1": {
          "type": "string"
        },
        "optionTime1": {
          "type": "string"
        },
        "optionDate2": {
          "type": "string"
        },
        "optionTime2": {
          "type": "string"
        },
        "optionDate3": {
          "type": "string"
        },
        "optionTime3": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "appointmentType": {
          "type": "string"
        },
        "visitType": {
          "type": "string"
