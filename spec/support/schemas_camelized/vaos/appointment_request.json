        "purposeOfVisit",
        "providerId",
        "secondRequest",
        "secondRequestSubmitted",
        "patient",
        "bestTimetoCall",
        "appointmentRequestDetailCode",
        "hasVeteranNewMessage",
        "hasProviderNewMessage",
        "providerSeenAppointmentRequest",
        "requestedPhoneCall",
        "bookedApptDateTime",
        "typeOfCareId",
        "friendlyLocationName",
        "date",
        "assigningAuthority",
        "createdDate"
      ]
    }
