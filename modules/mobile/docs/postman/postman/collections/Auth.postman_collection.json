  "item": [
    {
      "name": "Set Bearer Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "37c1d3fa-8712-4f9c-870b-536f6916615b",
            "exec": [
              "var jsonData = JSON.parse(responseBody)",
              "pm.globals.set(\"BEARER_TOKEN\", jsonData.access_token)",
              "",
              "",
              "",
              "",
              ""
            ],
            "type": "text/javascript"
          }
        }
      ],
      "id": "1ee71946-5f33-4c91-9fda-1d627094d42b",
      "request": {
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "password",
              "value": "{{Password}}",
              "type": "string"
            },
            {
              "key": "username",
              "value": "{{Username}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "body": {
          "mode": "urlencoded"
        },
        "url": {
          "raw": "{{AuthUrl}}/auth/token/:email?environment={{Environment}}&ngrok_url={{NGROK_URL}}&requester={{REQUESTER}}",
          "host": [
            "{{AuthUrl}}"
          ],
          "path": [
            "auth",
            "token",
            ":email"
          ],
          "query": [
            {
              "key": "environment",
              "value": "{{Environment}}"
            },
            {
              "key": "ngrok_url",
              "value": "{{NGROK_URL}}"
            },
            {
              "key": "requester",
              "value": "{{REQUESTER}}"
            }
          ],
          "variable": [
            {
              "key": "email",
              "value": "vets.gov.user+54@gmail.com",
              "description": "judy.morrison@id.me"
            }
          ]
        }
      }
    },
    {
