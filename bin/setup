#!/usr/bin/env ruby
# frozen_string_literal: true

if ARGV.include?('--help') || ARGV.include?('-h')
  puts <<~HELP
    Usage:
      bin/setup [options]

    Options:
      --help, -h        Display help message for 'setup'
      --change          Change developer environment
      --skip-basic      Skip to developer environment setup

    Examples:
      bin/setup --help                 Show help message
      bin/setup --change               Change developer environment
      bin/setup --skip-basic --change  Skip and change

  HELP
else
  VetsApi::Commands::Setup.run(args) if Rails.env.development? || Rails.env.test?
end
