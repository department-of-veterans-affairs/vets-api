                        "example": "123456789"
                      },
                      "vaFileNumber": {
                        "type": "string",
                        "example": "987654321"
                      },
                      "dateOfBirth": {
                        "type": "string",
                        "format": "date",
                        "example": "1980-01-01"
                      },
                      "address": {
                        "type": "object",
                        "properties": {
                          "street": {
                            "type": "string",
                            "example": "123 Main St"
                          },
                          "street2": {
