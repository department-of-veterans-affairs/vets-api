              "type":"string"
            }
          },
          "logo_url": {
            "type": "string"
          },
          "service_categories":{
            "type": "array",
            "items":{
              "type":"string"
            }
          },
          "app_url":{
            "type":"string"
          },
          "privacy_url":{
            "type":"string"
          },
