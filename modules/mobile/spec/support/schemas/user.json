{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": [
    "data",
    "meta"
  ],
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "id",
        "type",
        "attributes"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "attributes": {
          "type": "object",
          "required": [
            "profile",
            "authorizedServices"
          ],
          "properties": {
            "profile": {
              "type": "object",
              "required": [
                "firstName",
                "middleName",
                "lastName",
                "email",
                "residentialAddress",
                "mailingAddress"
              ],
              "properties": {
                "firstName": {
                  "type": "string"
                },
                "middleName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "birth_date": {
                  "type": "string"
                },
                "gender": {
                  "type": "string",
                  "enum": ["F", "M"]
                },
                "residentialAddress": {
                  "$ref": "address.json"
                },
                "mailingAddress": {
                  "$ref": "address.json"
                },
                "faxNumber": {
                  "$ref": "phone.json"
                },
                "homePhoneNumber": {
                  "$ref": "phone.json"
                },
                "mobilePhoneNumber": {
                  "$ref": "phone.json"
                },
                "workPhoneNumber": {
                  "$ref": "phone.json"
                }
              }
            },
            "authorizedServices": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "availableServices"
      ],
      "properties": {
        "availableServices": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
